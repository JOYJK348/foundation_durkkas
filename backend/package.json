{
    "name": "durkkas-erp-backend",
    "version": "1.0.0",
    "description": "Enterprise-grade backend for Durkkas ERP system",
    "private": true,
    "scripts": {
        "dev": "node -e \"const ip = Object.values(require('os').networkInterfaces()).flat().find(i => i.family === 'IPv4' && !i.internal)?.address; console.log('\\x1b[35m%s\\x1b[0m', '>>> API Node Access: http://' + ip + ':3000');\" && next dev -p 3000 -H 0.0.0.0",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "type-check": "tsc --noEmit",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest --coverage"
    },
    "dependencies": {
        "@supabase/supabase-js": "^2.39.0",
        "@upstash/redis": "^1.28.0",
        "bcryptjs": "^2.4.3",
        "date-fns": "^3.0.6",
        "dotenv": "^17.2.3",
        "jose": "^6.1.3",
        "jsonwebtoken": "^9.0.2",
        "next": "^14.0.4",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@testing-library/react": "^14.1.2",
        "@testing-library/jest-dom": "^6.1.5",
        "@types/bcryptjs": "^2.4.6",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/node": "^20.10.6",
        "@types/react": "^18.2.46",
        "@types/react-dom": "^18.2.18",
        "@vitejs/plugin-react": "^4.2.1",
        "@vitest/coverage-v8": "^1.1.0",
        "@vitest/ui": "^1.1.0",
        "eslint": "^8.56.0",
        "eslint-config-next": "^14.0.4",
        "jsdom": "^23.0.1",
        "typescript": "^5.3.3",
        "vitest": "^1.1.0"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=9.0.0"
    }
}